<%- include("../partials/header") %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name of campsite" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[img]" placeholder="img url" value="<%= campground.img %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>

        
    </div>
</div>

<%- include("../partials/footer") %>